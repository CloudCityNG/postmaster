{
  "custom_env": {
    "postmaster": {
      "path_to_vars": "opsworks",
      "env_vars" : [
        "CI_ENV=production",
        "ci_base_url=http://postmaster.example.com"
        "ci_proxy_ips=172.XX.XX.0/20,172.XX.XX.0/20,172.XX.XX.0/20"
        "db_hostname=mydbinstance.XXXXXXXXXXXX.us-west-2.rds.amazonaws.com",
        "db_username=awsuser",
        "db_password=mypassword",
        "AWS_PHP_CACHE_DIR=/tmp/aws-cache-data",
        "aws_account_id=XXXXXXXXXXXX",
        "aws_access_key=XXXXXXXXXXXXXXXXXXXX",
        "aws_secret_key=XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX",
        "aws_region=us-west-2",
        "aws_s3_bucket=bucket",
        "ga=UA-XXXXXXXX-X",
        "tumblr_client_id=XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX",
        "tumblr_client_secret=XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX",
        "email_source=postmaster@mail.example.com",
        "email_admin=joe@example.com",
        "email_debug=joe@example.com",
        "api_key=XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX"
      ]
    },
    "cron_jobs": [
      {
        "name"    : "process_notification queue bounces",
        "minute"  : "*", "hour" : "*", "day" : "*", "month" : "*", "weekday" : "*",
        "command" : "cd /srv/www/postmaster/current && php index.php task process_notification queue bounces"
      },
      {
        "name"    : "process_notification queue complaints",
        "minute"  : "*", "hour" : "*", "day" : "*", "month" : "*", "weekday" : "*",
        "command" : "cd /srv/www/postmaster/current && php index.php task process_notification queue complaints"
      },
      {
        "name"    : "process_notification queue deliveries",
        "minute"  : "*", "hour" : "*", "day" : "*", "month" : "*", "weekday" : "*",
        "command" : "cd /srv/www/postmaster/current && php index.php task process_notification queue deliveries"
      }
    ]
  }
}
